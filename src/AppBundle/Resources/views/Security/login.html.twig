{% extends "::base.html.twig" %}

{% block title %}AppBundle:Security:login{% endblock %}

{% block body %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="text-center">Login page</h2>
        </div>
        <div class="panel-body">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey }}
                </div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">

                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" name="_username" id="username" class="form-control">
                </div>
                
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" name="_password" id="password" class="form-control">
                </div>

                <button class="btn btn-success pull-right">Login</button>

            </form>
            
        </div>
    </div>
{% endblock %}
